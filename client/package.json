{
  "name": "assesshub-client",
  "version": "1.0.0",
  "description": "AssessHub Client - Case Management System",
  "main": "electron/main.js",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"npm run start\" \"electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:start": "npm-run-all -p start -l electron:wait",
    "electron:wait": "wait-on http://localhost:3000 && electron .",
    "electron:windows": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.3",
    "@mui/material": "^5.14.3",
    "@mui/x-data-grid": "^6.11.0",
    "axios": "^1.4.0",
    "chart.js": "^4.3.3",
    "electron-is-dev": "^2.0.0",
    "i18next": "^23.4.1",
    "jwt-decode": "^3.1.2",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.0.3",
    "react-router-dom": "^6.14.2",
    "recharts": "^2.7.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.3.2",
    "electron-builder": "^24.6.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.assesshub.app",
    "productName": "AssessHub",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "AssessHub",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
  }
}
